//- Defines the index page for the site. Root level intro page
extends ../layout.pug

block includes
	link(href='/css/template_list.css',rel='stylesheet')
	script(src='/js/template_list.js')

block content
	.box_container
		#compose_header.fullWidth_box.text_box_left
			.box_row
				h1 Style
				h3 "A good looking letter is the basis of humananity" - Somebody
		#template_list.fullWidth_box.text_box_left
			.box_row
				if templates
					ul
						each template, i in templates
							li.template_object(template-id=template.id)
								div
									div.template_header(style="background-image:url('http://placehold.it/300x300');")
									h1=template.title
									if template.stamp_cost > 0
										h2 Cost: #{template.stamp_cost} stamps
									else
										h2 Cost: Free!
									p=template.short_description
				else
					h1 Oh no, somebody (Alex) forgot to make the templates available...
	.box_container
		#select_template_action.fullWidth_box.action_box
			.box_row
				a(href='#')
					#select_template.action_icon
						.glyphicon.glyphicon-ok
						p Select style