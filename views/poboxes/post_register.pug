//- Defines the index page for the site. Root level intro page
extends ../layout.pug

block includes
	link(href='/css/post_register.css',rel='stylesheet')
	script(src='/js/post_register.js')

block content
	script.
		var delivery_time_hour = "#{delivery_time_hour}"
		var delivery_time_minute = "#{delivery_time_minute}"
	.box_container
		#registration_confirmation.fullWidth_box.image_box
			.box_row
				h1=user.box_number
				h2 Here's your PO Box number! Don't lose it!
		#delivery_time.fullWidth_box.text_box_middle
			.box_row
				span.glyphicon.glyphicon.glyphicon-time(aria-hidden='true')
				h2 Your mail will be delivered daily at
				h1=delivery_time_string
		#continue_inbox.fullWidth_box.text_box_middle
			.box_row
				a(href="inbox")
					span.glyphicon.glyphicon.glyphicon-arrow-right(aria-hidden='true')
					h2 Let's check out your new PO Box
						
