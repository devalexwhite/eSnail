//- Template specific includes
block template_includes
	link(href="/css/templates/buddha_template.css",rel='stylesheet')
	link(href='https://fonts.googleapis.com/css?family=Nunito',rel='stylesheet',type='text/css')

//- Display mode for recieved mail
block template_content_rendered
	//- Define default size for PDF mode
	script.
		template_pdfmode_width = "600px"
		template_pdfmode_height = "400px"
	#template_body
		#template_header
			if template_mode == 'view'
				h1.template_editable(match-name='main_header')=message_content['main_header']
			else
				h1.template_editable(match-name='main_header') Click the edit the header
		#template_main
			if template_mode == 'view'
				p.template_editable(match-name='main_paragraph')=message_content['main_paragraph']
			else
				p.template_editable(match-name='main_paragraph') Click to edit the content. May peace be with you.
//- Display mode for editing
block template_content_edit
